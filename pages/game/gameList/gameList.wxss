/* pages/game/gameList/gameList.wxss */
@import "/template/gameList/gameListTemplage.wxss";

.topTabSwiper {
  border-top: 1px solid #ccc; 
  border-bottom: 1px solid #ccc; 
  zoom: 1;
}
.tab{
  float: left; 
  width: 33.33%;
  text-align: center;
  padding: 10rpx 0; 
  margin-bottom: 30rpx;
  background-color: #e1e1e1e1;
}
.tabBorer{
  border-bottom: 1px solid #f00; 
  color: #f00;
}

.swiper{
  width: 100%;
  height: 1100rpx;
}
.scroll {
  width: 100%;
  height: 100%;
}
.field {
  font-weight: bold;
}

.top{
  font-size: 22rpx;
  position: fixed;
  right: 10px;
  bottom: 80px;
  z-index: 1;
  background-color: rgba(134, 135, 138, 0.26);
  color: rgb(243, 0, 0);
  text-align: center;
  padding:15rpx;
}