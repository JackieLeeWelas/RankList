/* pages/music/musicList/musicList.wxss */
.loading-tip {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #777;
}

.header {
  position: fixed;
  display: flex;
  flex-direction: row;
  top: 0rpx;
  width: 750rpx;
  background-color: #fff;
}

.musicList {
  display: flex;
  flex-wrap: wrap;
  margin-left: 10rpx;
  margin-right: 20rpx;
}

.item-music {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 230rpx;
  margin-left: 10rpx;
  margin-bottom: 30rpx;
  text-align: center;
}
.number {
  display: flex;
  flex-direction: row;
}

.number-image {
  width: 50rpx;
  height: 20rpx;
  padding: 10rpx;
}

.music-common-name {
  font-size: 30rpx;
  color: #000;
}

.music-artistNames {
  font-size: 25rpx;
  color: #666;
}

.item-image {
  width: 180rpx;
  height: 180rpx;
  margin-left: 15rpx;
  margin-right: 15rpx;
  margin-bottom: 10rpx;
  border-radius: 15rpx;
  border:1px solid #e1e1e1;
  box-shadow: 10rpx 10rpx 30rpx rgba(0, 0, 0, .3);
}