/* pages/book/bookList/bookList.wxss */
.bookList {
  display: flex;
  flex-direction: column;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.book-line {
  height: 2rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  background-color:#e1e1e1; 
}
.book {
  display: flex;
  flex-direction: row;
}
.book-image {
  width: 200rpx;
}
.book-image-pic {
  width: 200rpx;
  height: 300rpx;
  box-shadow: 10rpx 10rpx 30rpx rgba(0, 0, 0, .3);
}

.book-image-rank {
  margin-top: -320rpx;
}

.book-image-rank-text {
  font-size: 30rpx;
  background-color:rgba(0, 0, 0, .6);
  color: #FFF;
  padding-left: 15rpx;
  padding-right: 15rpx;
}

.book-info {
  max-width: 400rpx;
  margin-left: 40rpx;
  flex-direction: column;
}
.book-info-title {
  font-size: 40rpx;
  color: #444;
  font-weight: bold;
}
.book-common-text {
  font-size: 30rpx;
  padding: 5rpx 10rpx;
  margin-bottom: 10rpx;
  color: #666;
  display: inline-block;
}